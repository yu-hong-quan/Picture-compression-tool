{
  "name": "picture-compression-tool",
  "private": true,
  "version": "0.0.1",
  "description": "图片压缩工具",
  "author": "余山郡",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "clean": "node scripts/clean.js",
    "type-check": "vue-tsc --noEmit",
    "build": "npm run clean && vite build && electron-builder",
    "electron:dev": "vite dev & electron .",
    "generate-icons": "node scripts/generate-icons.js",
    "electron:build": "npm run generate-icons && npm run build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vicons/ionicons5": "^0.12.0",
    "@vueuse/core": "^10.7.0",
    "compressorjs": "^1.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "jszip": "^3.10.1",
    "naive-ui": "^2.35.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@vitejs/plugin-vue": "^4.6.2",
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1",
    "sass": "^1.69.5",
    "sharp": "^0.33.5",
    "svg2png-converter": "^1.0.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.22"
  },
  "config": {
    "electron_mirror": "https://npmmirror.com/mirrors/electron/",
    "electron_builder_binaries_mirror": "https://npmmirror.com/mirrors/electron-builder-binaries/"
  },
  "build": {
    "appId": "com.picture.compressor",
    "productName": "图片压缩工具",
    "icon": "build/icon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "icon*.png"
        ]
      }
    ],
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "图片压缩工具-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "图片压缩工具",
      "uninstallDisplayName": "图片压缩工具",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": false,
      "language": 2052,
      "perMachine": false,
      "runAfterFinish": true
    }
  }
}
